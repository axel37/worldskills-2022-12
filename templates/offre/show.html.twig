{% extends 'base.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
    <h1>Offre</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr> #}
            <tr>
                <th>Date de réception</th>
                <td>{{ offre.dateReception ? offre.dateReception|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nom du donateur</th>
                <td>{{ offre.nomDonateur }}</td>
            </tr>
            <tr>
                <th>Prénom du donateur</th>
                <td>{{ offre.prenomDonateur }}</td>
            </tr>
            <tr>
                <th>Tél. du donateur</th>
                <td>{{ offre.telephoneDonateur }}</td>
            </tr>
            <tr>
                <th>Mail du donateur</th>
                <td>{{ offre.mailDonateur }}</td>
            </tr>
            <tr>
                <th>Description de l'offre</th>
                <td>{{ offre.description }}</td>
            </tr>
            <tr>
                <th>Objets donnés</th>
                <td>
                {% for objet in offre.objets %}
                    <a href={{ path('app_objet_show', {reference: objet.reference}) }}>{{ objet.description ?? objet.type }}</a>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_offre_index') }}">Revenir en arrière</a>

    <a class="btn btn-primary href="{{ path('app_offre_edit', {'id': offre.id}) }}">Modifier</a>

    {{ include('offre/_delete_form.html.twig') }}
{% endblock %}
