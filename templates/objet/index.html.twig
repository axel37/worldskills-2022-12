{% extends 'base.html.twig' %}

{% block title %}Tous les objets{% endblock %}

{% block body %}
    <h1>Tous les objets</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Réference</th>
                <th>Description</th>
                <th>Montant estimé (€)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for objet in objets %}
            <tr>
                <td>{{ objet.reference }}</td>
                <td>{{ objet.description }}</td>
                <td>{{ objet.montantEstime }}</td>
                <td>
                    <a href="{{ path('app_objet_show', {'reference': objet.reference}) }}">Détails</a>
                    <a href="{{ path('app_objet_edit', {'reference': objet.reference}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_objet_new') }}">Nouvel objet</a>
{% endblock %}
